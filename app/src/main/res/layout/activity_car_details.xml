<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CarDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/carImageIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/innova"
                android:src="@drawable/innova"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/carNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Desire"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/seats_icon" />

            <TextView
                android:id="@+id/carSeatsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="9dp"
                android:text="Location"
                android:textColor="#AAAAAA"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/transmission_icon" />

            <TextView
                android:id="@+id/carTrasmitionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=" duration"
                android:textColor="#AAAAAA"
                android:textSize="13sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FF7D0D"
            app:cardCornerRadius="7dp">

            <TextView
                android:id="@+id/carPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Rs. 2300 "
                android:textColor="@color/white"
                android:textSize="11sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/carDetailsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="8sp"
            android:text="Features:\nDiesel\nAccomodation Booking\nLanguage Assistance"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Book Now"
            android:id="@+id/login_button"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius = "20dp"/>


    </LinearLayout>
</ScrollView>